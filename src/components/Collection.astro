---
import Lock from "../icons/Lock.astro";
import Globe from "../icons/Globe.astro";
interface Props {
  title: string;
  visibilty: string;
  numberOfFlashcards: number;
  pseduo: string;
  srcImageProfil: string;
  srcImageCollection: string;
}

const {
  title,
  visibilty,
  numberOfFlashcards,
  pseduo,
  srcImageProfil,
  srcImageCollection,
} = Astro.props;
---

<div
  class="w-80 h-24 border-2 border-gray-200 rounded-md flex p-2 cursor-pointer"
>
  <div class="w-2/3">
    <h1>{title}</h1>
    <p class="text-xs flex items-center gap-2">
      {numberOfFlashcards}
      {numberOfFlashcards > 1 ? "cartes" : "carte"}
      <span>{visibilty ?
        <Globe />
       : <Lock />}</span>
    </p>
    <div class="flex gap-2 items-center py-2">
      <img
        class="w-8 h-8 rounded-full"
        src={srcImageProfil}
        alt="Image de profil"
      />
      <p class="text-xs">{pseduo}</p>
    </div>
  </div>
  <div class="w-1/3">
    <img
      class="w-full h-full object-cover rounded-md"
      src={srcImageCollection}
      alt="Image de la collection"
    />
  </div>
</div>
